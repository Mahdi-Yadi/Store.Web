@using Application.Tools
@model List<Domain.Products.ProductDto>
@{
    ViewData["Title"] = "لیست موارد مورده علاقه";
}
<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">

                @await Component.InvokeAsync("Menu")

                <div class="col-sm-12 col-md-9 col-lg-9">
                    <div class="tab-content dashboard_content">

                        <table class="table">
                            <thead class="text-center">
                                <tr role="row">
                                    <th>تصویر</th>
                                    <th>نام</th>
                                    <th>قیمت</th>
                                    <th>اقدامات</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td><img src="/images/@item.ImageName" width="50" height="50"/> </td>
                                            <td>
                                                @item.Title
                                            </td>
                                            <td>
                                               @item.Price.ToString("#,0")
                                            </td>
                                            <td>
                                                <a asp-area="UserPanel" asp-controller="Home" asp-action="DeleteFav" asp-route-id="@item.Id">
                                                    حذف
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>

                        </table>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>