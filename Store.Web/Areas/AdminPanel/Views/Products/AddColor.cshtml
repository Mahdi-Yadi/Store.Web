@model DataLayer.Entities.Products.ColorProduct
@{
    ViewData["Title"] = "افزودن رنگ";
}

<form method="post" asp-area="AdminPanel" asp-controller="Products" asp-action="AddColor">

    <input type="text" asp-for="Name" placeholder="Name" />

    <input type="text" asp-for="Price" placeholder="price" />

    <input type="number" asp-for="Count" placeholder="count" />

    <input type="text" asp-for="ColorCode" placeholder="colorCode" />

    <label>
        <input type="checkbox" id="checkbox_fixedheader" asp-for="IsDelete">
        <span class="text">فعال/غیرفعال</span>
    </label>

    <br />

    <button type="submit" class="btn btn-success">ثبت</button>

</form>