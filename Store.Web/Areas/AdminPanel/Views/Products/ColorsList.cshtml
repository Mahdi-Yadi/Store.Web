@model List<DataLayer.Entities.Products.ColorProduct>
@{
    ViewData["Title"] = "لیست رنگ بندی";
}
<div class="col-xs-12 col-md-12">
    <div class="widget">
        <div class="widget-body">
            <a asp-area="AdminPanel" asp-controller="Products" asp-action="AddColor" asp-route-productId="@ViewBag.productId" class="btn btn-success">افزودن رنگ جدید</a>
            <div id="editabledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                <table class="table table-striped table-hover table-bordered dataTable no-footer" id="editabledatatable" role="grid" aria-describedby="editabledatatable_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
                                                    Username
                                                : activate to sort column descending" style="width: 181.667px;">
                               نام رنگ
                            </th>
                            <th class="sorting_asc" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
                                                    Username
                                                : activate to sort column descending" style="width: 181.667px;">
                               کد
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="
                                                    Full Name
                                                : activate to sort column ascending" style="width: 270.667px;">
                                قیمت
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-label="
                                                    Full Name
                                                : activate to sort column ascending" style="width: 270.667px;">
                                وضعیت و تعداد
                            </th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="

                                                " style="width: 342.667px;">
                                دستورات
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr role="row" class="odd">
                                    <td class="sorting_1">
                                        @item.Name
                                    </td>
                                    <td class="sorting_1">@item.ColorCode</td>
                                    <td>
                                        @item.Price.ToString("#,0") تومان
                                    </td>
                                    <td>
                                        @item.Count @if (item.IsDelete)
                                                    {
                                                        <span>غیرفعال</span>
                                                    }
                                                    else
                                                    {
                                                        <span>فعال</span>
                                                    }
                                    </td>
                                    <td>
                                        <a asp-area="AdminPanel" asp-controller="Products" asp-action="UpdateColor" asp-route-colorId="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-info btn-xs edit">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
                                      @if(!item.IsDelete)
                                        {
                                            <a asp-area="AdminPanel" asp-controller="Products" asp-action="DeleteColor" asp-route-colorId="@item.Id" asp-route-productId="@item.ProductId" class="btn btn-danger btn-xs delete">
                                                <i class="fa fa-trash-o"></i> حذف
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="row DTTTFooter">
                    <div class="col-sm-6">
                        <div class="dataTables_info" id="editabledatatable_info" role="status" aria-live="polite">Showing 1 to 5 of 6 entries</div>
                    </div>
                    <div class="col-sm-6">
                        <div class="dataTables_paginate paging_bootstrap" id="editabledatatable_paginate">
                            <ul class="pagination">
                                <li class="prev disabled"><a href="#">Prev</a></li>
                                <li class="active"><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li class="next"><a href="#">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>