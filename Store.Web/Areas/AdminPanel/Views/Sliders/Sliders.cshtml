@model List<DataLayer.Entities.Sites.Slider>
@{
    ViewData["Title"] = "اسلایدرها";
}
<div class="col-xs-12 col-md-12">
    <div class="widget">
        <div class="widget-body">
            <a asp-area="AdminPanel" asp-controller="Sliders" asp-action="CreateSlider" class="btn btn-success">افزودن اسلایدر جدید</a>
            <div id="editabledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                <table class="table table-striped table-hover table-bordered dataTable no-footer" id="editabledatatable" role="grid" aria-describedby="editabledatatable_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
                                                    Username
                                                : activate to sort column descending" style="width: 181.667px;">
                                تصویر 
                            </th>
                            <th class="sorting_asc" tabindex="0" aria-controls="editabledatatable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
                                                    Username
                                                : activate to sort column descending" style="width: 181.667px;">
                                 عنوان
                            </th>
                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="

                                                " style="width: 342.667px;">
                                دستورات
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr role="row" class="odd">
                                    <td class="sorting_1"><img src="/images/sliders/@item.ImageName" width="50" height="50" /></td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        <a asp-area="AdminPanel" asp-controller="Sliders" asp-action="DeleteSlider" asp-route-id="@item.Id" class="btn btn-danger btn-xs delete">
                                            <i class="fa fa-trash-o"></i> حذف
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>